\mathbb{P}\left(X_{t}\in dx|X_{T}\in dy\right) & =\frac{\mathbb{P}\left(X_{t}\in dx,X_{T}\in dy\right)}{\mathbb{P}\left(X_{T}\in dy\right)}\\
 & =\frac{\mathbb{P}\left(X_{T}\in dy|X_{t}\in dx\right)\mathbb{P}\left(X_{t}\in dx\right)}{\mathbb{P}\left(X_{T}\in dy\right)}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We know
\begin_inset Formula 
\[
X_{T}|\left(X_{t}=x\right)\sim\boldsymbol{N}\left[x^{-\theta(T-t)},\frac{\sigma^{2}}{2\theta}\left(1-e^{-2\theta(T-t)}\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Therefore
\begin_inset Formula 
\begin{align*}
\mathbb{P}\left[X_{t}\in(x,x+\Delta x)|X_{T}\in(y,y+\Delta y)\right] & =\mathbb{P}\left[\sigma\sqrt{\frac{1-e^{-2\theta(T-t)}}{2\theta}}Z_{1}+xe^{-\theta(T-t)}\in\left(y,y+\Delta y\right)\right]\times\\
 & =\mathbb{P}\left[\sigma\sqrt{\frac{1-e^{-2\theta t}}{2\theta}}Z_{2}+e^{-\theta t}X_{0}\in\left(x,x+\Delta x\right)\right]\times\\
 & =\left\{ \mathbb{P}\left[\sigma\sqrt{\frac{1-e^{-2\theta T}}{2\theta}}Z_{3}+X_{0}e^{-\theta T}\in\left(y,y+\Delta y\right)\right]\right\} ^{-1}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
\mathbb{P}\left[\sigma\sqrt{\frac{1-e^{-2\theta t}}{2\theta}}Z_{2}+e^{-\theta t}X_{0}\in\left(x,x+\Delta x\right)\right] & =\Phi\left(\frac{x+\Delta x-e^{-\theta t}X_{0}}{\sigma\sqrt{\frac{1-e^{-2\theta t}}{2\theta}}}\right)-\Phi\left(\frac{x-e^{-\theta t}X_{0}}{\sigma\sqrt{\frac{1-e^{-2\theta t}}{2\theta}}}\right)\\
 & =\frac{1}{\sigma\sqrt{\frac{1-e^{-2\theta t}}{2\theta}}}\phi\left(\frac{x-e^{-\theta t}X_{0}}{\sigma\sqrt{\frac{1-e^{-2\theta t}}{2\theta}}}\right)\Delta x+O\left(\Delta x^{2}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Thus,
\begin_inset Formula 
\begin{align*}
\mathbb{P}\left[X_{t}\in(x,x+\Delta x)|X_{T}\in(y,y+\Delta y)\right] & =\left[\frac{1}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta(T-t)}}}\phi\left(\frac{y-e^{-\theta(T-t)}x}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta(T-t)}}}\right)\Delta y+O\left(\Delta y^{2}\right)\right]\times\\
 & \left[\frac{1}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta t}}}\phi\left(\frac{x-e^{-\theta t}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta t}}}\right)\Delta x+O\left(\Delta x^{2}\right)\right]\times\\
 & \left\{ \frac{1}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\phi\left(\frac{y-e^{-\theta T}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\Delta y+O\left(\Delta y^{2}\right)\right\} ^{-1}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
As 
\begin_inset Formula $\Delta x\to0$
\end_inset

 and 
\begin_inset Formula $\Delta y\to0$
\end_inset

,
 we have
\begin_inset Formula 
\begin{align*}
\mathbb{P}\left(X_{t}\in dx|X_{T}=y\right) & =\frac{1}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta(T-t)}}\cdot\frac{2\theta}{1-e^{-2\theta t}}\cdot\frac{1-e^{-2\theta T}}{2\theta}}\times\\
 & \phi\left(\frac{y-e^{-\theta(T-t)}x}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta(T-t)}}}\right)\times\\
 & \phi\left(\frac{x-e^{-\theta t}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta t}}}\right)\\
 & \left[\phi\left(\frac{y-e^{-\theta T}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\right]^{-1}dx\\
 & =\frac{1}{\sigma}\sqrt{\frac{2\theta\left(1-e^{-2\theta T}\right)}{\left(1-e^{-2\theta(T-t)}\right)\left(1-e^{-2\theta t}\right)}}\times\\
 & \phi\left(\frac{y-e^{-\theta(T-t)}x}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta(T-t)}}}\right)\times\\
 & \phi\left(\frac{x-e^{-\theta t}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta t}}}\right)\times\\
 & \left[\phi\left(\frac{y-e^{-\theta T}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\right]^{-1}dx
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
As 
\begin_inset Formula $t\to0,$
\end_inset


\begin_inset Formula 
\begin{align*}
\mathbb{P}\left(X_{t}\in dx|X_{T}=y\right) & \to\phi\left(\frac{y-e^{-\theta T}x}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\times\delta\left(x-X_{0}\right)\\
 & \left[\phi\left(\frac{y-e^{-\theta T}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\right]^{-1}dx
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
As 
\begin_inset Formula $t\to T$
\end_inset

,
\begin_inset Formula 
\[
\mathbb{P}\left(X_{t}\in dx|X_{T}=y\right)\to\delta\left(y-x\right)\phi\left(\frac{x-e^{-\theta T}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\left[\phi\left(\frac{y-e^{-\theta T}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\right]^{-1}dx
\]

\end_inset


\end_layout

\begin_layout Standard
So we have:
\begin_inset Formula 
\begin{align*}
\mathbb{P}\left(X_{t}\in dx|X_{T}=y\right) & =\frac{1}{\sigma}\sqrt{\frac{2\theta\left(1-e^{-2\theta T}\right)}{\left(1-e^{-2\theta(T-t)}\right)\left(1-e^{-2\theta t}\right)}}\left[\phi\left(\frac{y-e^{-\theta T}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\right]^{-1}\times\\
 & \phi\left(\frac{y-e^{-\theta(T-t)}x}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta(T-t)}}}\right)\phi\left(\frac{x-e^{-\theta t}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta t}}}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Substituting 
\begin_inset Formula $\phi(x)$
\end_inset

 with 
\begin_inset Formula $e^{-x^{2}/2}/\sqrt{2\pi}$
\end_inset

,
 we get
\begin_inset Formula 
\begin{align*}
 & \phi\left(\frac{y-e^{-\theta(T-t)}x}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta(T-t)}}}\right)\phi\left(\frac{x-e^{-\theta t}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta t}}}\right)\\
= & \exp\left[-\frac{2\theta}{1-e^{-2\theta(T-t)}}\frac{\left(y-e^{-\theta(T-t)}x\right)^{2}}{2\sigma^{2}}\right]\times\\
 & \exp\left[-\frac{2\theta}{1-e^{-2\theta t}}\frac{\left(x-e^{-\theta t}X_{0}\right)^{2}}{2\sigma^{2}}\right]\times\frac{1}{2\pi}\\
= & \frac{1}{2\pi}\exp\left[-\frac{2\theta}{1-e^{-2\theta(T-t)}}\frac{e^{-2\theta(T-t)}x^{2}}{2\sigma^{2}}-\frac{2\theta}{1-e^{-2\theta t}}\frac{x^{2}}{2\sigma^{2}}\right]\times\\
 & \exp\left[-\frac{2\theta}{1-e^{-2\theta(T-t)}}\frac{-2xye^{-\theta(T-t)}}{2\sigma^{2}}-\frac{2\theta}{1-e^{-2\theta t}}\frac{-2xX_{0}e^{-\theta t}}{2\sigma^{2}}\right]\times\\
 & \exp\left[-\frac{2\theta}{1-e^{-2\theta(T-t)}}\frac{y^{2}}{2\sigma^{2}}-\frac{2\theta}{1-e^{-2\theta t}}\frac{e^{-2\theta t}X_{0}^{2}}{2\sigma^{2}}\right]\\
= & \frac{1}{2\pi}\exp\left[-\frac{\theta}{\sigma^{2}}\left(\frac{1}{e^{2\theta(T-t)}-1}+\frac{e^{2\theta t}}{e^{2\theta t}-1}\right)x^{2}\right]\times\\
 & \exp\left[2\frac{\theta}{\sigma^{2}}\left(\frac{ye^{\theta(T-t)}}{e^{2\theta(T-t)}-1}+\frac{X_{0}e^{\theta t}}{e^{2\theta t}-1}\right)x\right]\times\\
 & \exp\left[-\frac{\theta}{\sigma^{2}}\left(\frac{y^{2}e^{2\theta(T-t)}}{e^{2\theta(T-t)}-1}+\frac{X_{0}^{2}}{e^{2\theta t}-1}\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
For simplicity,
 we can write
\begin_inset Formula 
\begin{align}
\mathbb{P}\left(X_{t}\in dx|X_{T}=y\right) & =\frac{1}{\sigma}\sqrt{\frac{2\theta\left(1-e^{-2\theta T}\right)}{\left(1-e^{-2\theta(T-t)}\right)\left(1-e^{-2\theta t}\right)}}\left[\phi\left(\frac{y-e^{-\theta T}X_{0}}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta T}}}\right)\right]^{-1}\times\label{eq:7j5h6j78}\\
 & \frac{1}{2\pi}\exp\left[-\frac{\theta}{\sigma^{2}}\left(\frac{y^{2}e^{2\theta(T-t)}}{e^{2\theta(T-t)}-1}+\frac{X_{0}^{2}}{e^{2\theta t}-1}\right)\right]\times\nonumber \\
 & \exp\left[-\frac{\theta}{\sigma^{2}}\left(\frac{1}{e^{2\theta(T-t)}-1}+\frac{e^{2\theta t}}{e^{2\theta t}-1}\right)x^{2}\right]\times\nonumber \\
 & \exp\left[2\frac{\theta}{\sigma^{2}}\left(\frac{ye^{\theta(T-t)}}{e^{2\theta(T-t)}-1}+\frac{X_{0}e^{\theta t}}{e^{2\theta t}-1}\right)x\right]\nonumber 
\end{align}

\end_inset


\end_layout

\begin_layout Section
The supremum of an OU process
\end_layout

\begin_layout Standard
Consider the process
\begin_inset Formula 
\[
dY_{t}=-\theta Y_{t}dt+\sigma dW_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
Clearly,
\begin_inset Formula 
\begin{align*}
e^{\theta t}dY_{t}+\theta e^{\theta t}Y_{t}dt & =\sigma e^{\theta t}dW_{t}\\
d\left(e^{\theta t}Y_{t}\right) & =\sigma e^{\theta t}dW_{t}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Let
\begin_inset Formula 
\[
X_{t}=e^{\theta t}Y_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
Now that
\begin_inset Formula 
\[
dX_{t}=\sigma e^{\theta t}dW_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
we know
\begin_inset Formula 
\[
X_{\alpha(t)}\overset{d}{=}W_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
with
\begin_inset Formula 
\[
\sigma^{2}e^{2\theta t}=c(t)
\]

\end_inset


\end_layout

\begin_layout Standard
and
\begin_inset Formula 
\[
\alpha(t)=\inf\left\{ \tau>0:\intop_{0}^{\tau}c(s)ds>t\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
Since
\begin_inset Formula 
\[
\beta(\tau)=\intop_{0}^{\tau}\sigma^{2}e^{2\theta s}ds=\sigma^{2}\frac{e^{2\theta\tau}-1}{2\theta}
\]

\end_inset


\end_layout

\begin_layout Standard
we have
\begin_inset Formula 
\[
\alpha(t)=\beta^{-1}(t)=\frac{1}{2\theta}\ln\left(\frac{2\theta t}{\sigma^{2}}+1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Therefore
\begin_inset Formula 
\[
X_{t}\overset{d}{=}W_{\beta(t)}=W\left(\sigma^{2}\frac{e^{2\theta t}-1}{2\theta},\omega\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Thus
\begin_inset Formula 
\[
e^{\theta t}Y_{t}\overset{d}{=}W\left(\sigma^{2}\frac{e^{2\theta t}-1}{2\theta},\omega\right)
\]

\end_inset


\end_layout

\begin_layout Standard
and
\begin_inset Formula 
\[
Y_{t}\overset{d}{=}e^{-\theta t}W\left(\sigma^{2}\frac{e^{2\theta t}-1}{2\theta},\omega\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mathbb{P}\left(\sup_{s\leq t}Y_{s}>c\right) & =\mathbb{P}\left[\sup_{s\leq t}e^{-\theta s}W\left(\sigma^{2}\frac{e^{2\theta s}-1}{2\theta}\right)>c\right]\\
 & =\mathbb{P}\left[\sup_{s\leq t}W\left(\sigma^{2}\frac{1-e^{-2\theta s}}{2\theta}\right)>c\right]\\
 & =2\mathbb{P}\left[W\left(\sigma^{2}\frac{1-e^{-2\theta t}}{2\theta}\right)>c\right]\\
 & =2\mathbb{P}\left[\sigma\sqrt{\frac{1-e^{-2\theta t}}{2\theta}}Z>c\right]\\
 & =2\mathbb{P}\left(Z>\frac{c}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta t}}}\right)\\
 & =2\Phi\left(-\frac{c}{\sigma}\sqrt{\frac{2\theta}{1-e^{-2\theta t}}}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Note
\begin_inset Formula 
\[
\lim_{t\to\infty}\mathbb{P}\left(\sup_{s\leq t}Y_{s}>c\right)=2\Phi\left(-\frac{c\sqrt{2\theta}}{\sigma}\right)
\]

\end_inset


\end_layout

