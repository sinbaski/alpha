\end_layout

\begin_layout Standard
We know
\begin_inset Formula 
\[
\intop_{t}^{t+\Delta t}I_{s}ds=\frac{\left(I_{t}-\bar{I}\right)\left(1-e^{-\beta\Delta t}\right)}{\beta}+\bar{I}\Delta t-\frac{\eta}{\beta}\intop_{t}^{t+\Delta t}\left[e^{\beta(s-t-\Delta t)}-1\right]dB_{s}
\]

\end_inset

 and
\begin_inset Formula 
\begin{align*}
\text{var}\left\{ \frac{\eta}{\beta}\intop_{t}^{t+\Delta t}\left[e^{\beta(s-t-\Delta t)}-1\right]dB_{s}\right\}  & =\frac{\eta^{2}}{\beta^{2}}\intop_{t}^{t+\Delta t}\left[e^{\beta(s-t-\Delta t)}-1\right]^{2}ds\\
 & =\frac{\eta^{2}}{\beta^{2}}\intop_{t}^{t+\Delta t}\left[e^{2\beta(s-t-\Delta t)}-2e^{\beta(s-t-\Delta t)}+1\right]ds\\
 & =\frac{\eta^{2}}{\beta^{2}}\left\{ \frac{e^{-2\beta(t+\Delta t)}}{2\beta}\left[e^{2\beta(t+\Delta t)}-e^{2\beta t}\right]-2\frac{e^{-\beta(t+\Delta t)}}{\beta}\left[e^{\beta(t+\Delta t)}-e^{\beta t}\right]+\Delta t\right\} \\
 & =\frac{\eta^{2}}{\beta^{2}}\left\{ \frac{1-e^{-2\beta\Delta t}}{2\beta}-2\frac{1-e^{-\beta\Delta t}}{\beta}+\Delta t\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Therefore
\begin_inset Formula 
\[
\mathbb{E}\left[\exp\left(\intop_{t}^{t+\Delta t}I_{s}ds\right)|I_{t}\right]=\exp\left[\frac{\left(I_{t}-\bar{I}\right)\left(1-e^{-\beta\Delta t}\right)}{\beta}+\bar{I}\Delta t+\frac{\eta^{2}}{2\beta^{2}}\left\{ \frac{1-e^{-2\beta\Delta t}}{2\beta}-2\frac{1-e^{-\beta\Delta t}}{\beta}+\Delta t\right\} \right]
\]

\end_inset


\end_layout

\begin_layout Standard
We also know
\begin_inset Formula 
\[
I_{t}=I_{0}e^{-\beta t}+\bar{I}\left(1-e^{-\beta t}\right)+\eta\intop_{0}^{t}e^{\beta(s-t)}dB_{s}
\]

\end_inset


\end_layout

\begin_layout Standard
and
\begin_inset Formula 
\begin{align*}
\text{var}I_{t} & =\eta^{2}\intop_{0}^{t}e^{2\beta(s-t)}ds\\
 & =\eta^{2}\frac{e^{-2\beta t}}{2\beta}\left(e^{2\beta t}-1\right)\\
 & =\frac{\eta^{2}}{2\beta}\left(1-e^{-2\beta t}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Therefore,
 using the tower rule of conditional expectations,
\begin_inset Formula 
\begin{align*}
 & \mathbb{E}\left[\exp\left(\intop_{t}^{t+\Delta t}I_{s}ds\right)\right]\\
= & \mathbb{E}\left\{ \mathbb{E}\left[\exp\left(\intop_{t}^{t+\Delta t}I_{s}ds\right)|I_{t}\right]\right\} \\
= & \exp\left[\bar{I}\Delta t+\frac{\eta^{2}}{2\beta^{2}}\left\{ \frac{1-e^{-2\beta\Delta t}}{2\beta}-2\frac{1-e^{-\beta\Delta t}}{\beta}+\Delta t\right\} \right]\times\mathbb{E}\exp\left[\frac{\left(I_{t}-\bar{I}\right)\left(1-e^{-\beta\Delta t}\right)}{\beta}\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Because
\begin_inset Formula 
\[
\frac{\left(I_{t}-\bar{I}\right)\left(1-e^{-\beta\Delta t}\right)}{\beta}\sim\boldsymbol{N}\left(u,v^{2}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
with
\begin_inset Formula 
\begin{align*}
u & =\frac{\left(1-e^{-\beta\Delta t}\right)}{\beta}\left[\left(I_{0}-\bar{I}\right)e^{-\beta t}+\bar{I}-\bar{I}\right]\\
 & =\frac{\left(1-e^{-\beta\Delta t}\right)}{\beta}\left(I_{0}-\bar{I}\right)e^{-\beta t}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
and
\begin_inset Formula 
\[
v^{2}=\frac{\left(1-e^{-\beta\Delta t}\right)^{2}}{\beta^{2}}\cdot\frac{\eta^{2}}{2\beta}\left(1-e^{-2\beta t}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
\lim_{t\to\infty}\mathbb{E}\exp\left[\frac{\left(I_{t}-\bar{I}\right)\left(1-e^{-\beta\Delta t}\right)}{\beta}\right] & =\lim_{t\to\infty}\exp\left(u+\frac{v^{2}}{2}\right)\\
 & =\exp\left[\frac{\left(1-e^{-\beta\Delta t}\right)^{2}}{\beta^{2}}\cdot\frac{\eta^{2}}{4\beta}\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
All in all,
 we have
\begin_inset Formula 
\begin{align*}
 & \lim_{t\to\infty}\mathbb{E}\left[\exp\left(\intop_{t}^{t+\Delta t}I_{s}ds\right)\right]\\
= & \exp\left[\bar{I}\Delta t+\frac{\eta^{2}}{2\beta^{2}}\left\{ \frac{1-e^{-2\beta\Delta t}}{2\beta}-2\frac{1-e^{-\beta\Delta t}}{\beta}+\Delta t\right\} +\frac{\left(1-e^{-\beta\Delta t}\right)^{2}}{\beta^{2}}\cdot\frac{\eta^{2}}{4\beta}\right]\\
= & \exp\left[\bar{I}\Delta t+\frac{\eta^{2}}{2\beta^{2}}\left(\frac{1-e^{-2\beta\Delta t}}{2\beta}-2\frac{1-e^{-\beta\Delta t}}{\beta}+\Delta t\right)+\frac{\eta^{2}}{4\beta}\left(\frac{1-2e^{-\beta\Delta t}+e^{-2\beta\Delta t}}{\beta^{2}}\right)\right]\\
= & \exp\left[e^{-2\beta\Delta t}\left(-\frac{\eta^{2}}{4\beta^{3}}+\frac{\eta^{2}}{4\beta^{3}}\right)+e^{-\beta\Delta t}\left(\frac{\eta^{2}}{\beta^{3}}-\frac{\eta^{2}}{2\beta^{3}}\right)+\bar{I}\Delta t+\frac{\eta^{2}}{2\beta^{2}}\left(\frac{1}{2\beta}-\frac{2}{\beta}+\Delta t\right)+\frac{\eta^{2}}{4\beta^{3}}\right]\\
= & \exp\left[e^{-\beta\Delta t}\frac{\eta^{2}}{2\beta^{3}}+\bar{I}\Delta t+\frac{\eta^{2}}{\beta^{3}}\left(\frac{1}{4}-1+\frac{1}{4}\right)+\frac{\eta^{2}}{2\beta^{2}}\Delta t\right]\\
= & \exp\left[e^{-\beta\Delta t}\frac{\eta^{2}}{2\beta^{3}}+\bar{I}\Delta t-\frac{\eta^{2}}{2\beta^{3}}+\frac{\eta^{2}}{2\beta^{2}}\Delta t\right]\\
= & \exp\left[\frac{\eta^{2}}{2\beta^{3}}\left(e^{-\beta\Delta t}-1+\Delta t\right)+\bar{I}\Delta t\right]\\
= & \exp\left[\bar{I}\Delta t-\frac{\eta^{2}}{2\beta^{3}}\left(1-\Delta t-e^{-\beta\Delta t}\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
Calibration by MLE
\end_layout

\begin_layout Standard
It is assumed that the inflation rate follows the Ornstein-Uhlenbeck process:
\begin_inset Formula 
\[
dI_{t}=-\beta\left(I_{t}-\bar{I}\right)dt+\eta dB_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
Hence
\begin_inset Formula 
\begin{align*}
dI_{t}+\beta I_{t}dt & =\beta\bar{I}dt+\eta dB_{t}\\
e^{\beta t}dI_{t}+\beta e^{\beta t}I_{t}dt & =\beta e^{\beta t}\bar{I}dt+\eta e^{\beta t}dB_{t}\\
d\left(e^{\beta t}I_{t}\right) & =\beta e^{\beta t}\bar{I}dt+\eta e^{\beta t}dB_{t}\\
e^{\beta T}I_{T}-e^{\beta t}I_{t} & =\beta\bar{I}\intop_{t}^{T}e^{\beta s}ds+\eta\intop_{t}^{T}e^{\beta s}dB_{s}\\
 & =\beta\bar{I}\frac{e^{\beta T}-e^{\beta t}}{\beta}+\eta\intop_{t}^{T}e^{\beta s}dB_{s}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Of course
\begin_inset Formula 
\begin{align*}
\text{var}\left(\eta\intop_{t}^{T}e^{\beta s}dB_{s}\right) & =\eta^{2}\intop_{t}^{T}e^{2\beta s}ds\\
 & =\eta^{2}\frac{e^{2\beta T}-e^{2\beta t}}{2\beta}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
This allows us to estimate 
\begin_inset Formula $e^{\beta t}I_{t}$
\end_inset

 by MLE.
 Let
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
a_{n} & =\beta\bar{I}\frac{e^{\beta T}-e^{\beta t}}{\beta}=\bar{I}\left[e^{\beta\left(n+1\right)\Delta t}-e^{\beta n\Delta t}\right]\\
b_{n} & =\eta\sqrt{\frac{e^{2\beta(n+1)\Delta t}-e^{2\beta n\Delta t}}{2\beta}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $y_{n}=e^{\beta(n+1)\Delta t}I_{(n+1)\Delta t}-e^{\beta n\Delta t}I_{n\Delta t}$
\end_inset

 with 
\begin_inset Formula $n=0,1,2,\dots,N-1$
\end_inset

.
 Then
\begin_inset Formula 
\begin{align*}
L\left(\vec{y},\beta,\bar{I},\eta\right) & =\sum_{n=0}^{N-1}\ln\phi_{a,b}\left(y_{n}\right)\\
 & =\sum_{n=0}^{N-1}\left[-\frac{\left(y_{n}-a_{n}\right)^{2}}{2b_{n}^{2}}-\ln\sqrt{2\pi b_{n}^{2}}\right]\\
 & =\sum_{n=0}^{N-1}\left[-\frac{\left(y_{n}-a_{n}\right)^{2}}{2b_{n}^{2}}-\frac{1}{2}\left(\ln2\pi+2\ln b_{n}\right)\right]\\
 & =\sum_{n=0}^{N-1}\left[-\frac{\left(y_{n}-a_{n}\right)^{2}}{2b_{n}^{2}}-\ln b_{n}\right]-\frac{N\ln\left(2\pi\right)}{2}\\
 & =\sum_{n=0}^{N-1}\left[-\frac{\left(y_{n}-a_{n}\right)^{2}}{2b_{n}^{2}}-\ln b_{n}\right]-\frac{N\ln\left(2\pi\right)}{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
\frac{\partial L}{\partial a_{k}} & =\frac{2\left(y_{k}-a_{k}\right)}{2b_{k}^{2}}=\frac{y_{k}-a_{k}}{b_{k}^{2}}\\
\frac{\partial L}{\partial b_{k}} & =2\frac{\left(y_{k}-a_{k}\right)^{2}}{2b_{k}^{3}}-\frac{1}{b_{k}}=\frac{\left(y_{k}-a_{k}\right)^{2}-b_{k}^{2}}{b_{k}^{3}}\\
\frac{\partial L}{\partial y_{k}} & =-\frac{2\left(y_{k}-a_{k}\right)}{2b_{k}^{2}}=-\frac{y_{k}-a_{k}}{b_{k}^{2}}=-\frac{\partial L}{\partial a_{k}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Moreover
\begin_inset Formula 
\begin{align*}
\frac{\partial a_{k}}{\partial\beta} & =\frac{\partial}{\partial\beta}\left[e^{\beta\left(k+1\right)\Delta t}-e^{\beta k\Delta t}\right]\\
 & =(k+1)\Delta te^{\beta(k+1)\Delta t}-k\Delta te^{\beta k\Delta t}
\end{align*}

\end_inset

 and
\begin_inset Formula 
\begin{align*}
\frac{\partial b_{k}}{\partial\beta} & =\frac{\partial}{\partial\beta}\left[\eta\sqrt{\frac{e^{2\beta(k+1)\Delta t}-e^{2\beta k\Delta t}}{2\beta}}\right]\\
 & =\eta\frac{1}{2}\left[\frac{e^{2\beta(k+1)\Delta t}-e^{2\beta k\Delta t}}{2\beta}\right]^{-1/2}\cdot\frac{2\beta\left[2(k+1)\Delta te^{2\beta(k+1)\Delta t}-2k\Delta te^{2\beta k\Delta t}\right]-2\left[e^{2\beta(k+1)\Delta t}-e^{2\beta k\Delta t}\right]}{4\beta^{2}}\\
 & =\eta\left[\frac{e^{2\beta(k+1)\Delta t}-e^{2\beta k\Delta t}}{2\beta}\right]^{-1/2}\cdot\frac{\beta\left[2(k+1)\Delta te^{2\beta(k+1)\Delta t}-2k\Delta te^{2\beta k\Delta t}\right]-\left[e^{2\beta(k+1)\Delta t}-e^{2\beta k\Delta t}\right]}{2\beta^{2}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
and
\begin_inset Formula 
\begin{align*}
\frac{\partial y_{k}}{\partial\beta} & =\frac{\partial}{\partial\beta}\left[e^{\beta(k+1)\Delta t}I_{(k+1)\Delta t}-e^{\beta k\Delta t}I_{k\Delta t}\right]\\
 & =(k+1)\Delta te^{\beta(k+1)\Delta t}I_{(k+1)\Delta t}-k\Delta te^{\beta k\Delta t}I_{k\Delta t}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Similarly,
\begin_inset Formula 
\begin{align*}
\frac{\partial a_{k}}{\partial\bar{I}} & =e^{\beta(k+1)\Delta t}-e^{\beta k\Delta t}\\
\frac{\partial b_{k}}{\partial\bar{I}} & =0\\
\frac{\partial y_{k}}{\partial\bar{I}} & =0
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
and
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\frac{\partial a_{k}}{\partial\eta} & =0\\
\frac{\partial b_{k}}{\partial\eta} & =\sqrt{\frac{e^{2\beta(k+1)\Delta t}-e^{2\beta k\Delta t}}{2\beta}}\\
\frac{\partial y_{k}}{\partial\eta} & =0
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Finally,
\begin_inset Formula 
\begin{align*}
\frac{\partial L}{\partial\beta} & =\sum_{k=0}^{N-1}\left(\frac{\partial L}{\partial a_{k}}\cdot\frac{\partial a_{k}}{\partial\beta}+\frac{\partial L}{\partial b_{k}}\cdot\frac{\partial b_{k}}{\partial\beta}+\frac{\partial L}{\partial y_{k}}\cdot\frac{\partial y_{k}}{\partial\beta}\right)\\
 & =\sum_{k=0}^{N-1}\left[\frac{\partial L}{\partial a_{k}}\cdot\left(\frac{\partial a_{k}}{\partial\beta}-\frac{\partial y_{k}}{\partial\beta}\right)+\frac{\partial L}{\partial b_{k}}\cdot\frac{\partial b_{k}}{\partial\beta}\right]\\
\frac{\partial L}{\partial\bar{I}} & =\sum_{k=0}^{N-1}\frac{\partial L}{\partial a_{k}}\left(e^{\beta(k+1)\Delta t}-e^{\beta k\Delta t}\right)\\
\frac{\partial L}{\partial\eta} & =\sum_{k=0}^{N-1}\frac{\partial L}{\partial b_{k}}\sqrt{\frac{e^{2\beta(k+1)\Delta t}-e^{2\beta k\Delta t}}{2\beta}}
\end{align*}

\end_inset


\end_layout

\begin_layout Section
Estimating the correlation between short rate & inflation rate
\end_layout

\begin_layout Standard
We have assumed
\begin_inset Formula 
\begin{align*}
dr_{t} & =-\alpha\left(r_{t}-\overline{r}\right)dt+\sigma dW_{t}\\
dI_{t} & =-\beta\left(I_{t}-\overline{I}\right)dt++\eta dB_{t}\\
dW_{t}dB_{t} & =\rho dt
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Following the same steps that leads to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:inflation-1"

\end_inset

) to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:inflation-3"

\end_inset

),
 we obtain
\begin_inset Formula 
\[
\intop_{0}^{t}r_{t}dt=f\left(t,\overline{r},r_{0},\alpha\right)-\frac{\sigma}{\alpha}Z_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
where
\begin_inset Formula 
\begin{align*}
f\left(t,\overline{r},r_{0},\alpha\right) & =\frac{\left(r_{0}-\overline{r}\right)\left(1-e^{-\alpha t}\right)}{\alpha}+\overline{r}t\\
Z_{t} & =\intop_{0}^{t}\left[e^{\alpha(s-t)}-1\right]dW_{s}
\end{align*}

\end_inset

 It follows
\begin_inset Formula 
\begin{align*}
\intop_{n\Delta t}^{(n+1)\Delta t}r_{t}dt & =\intop_{0}^{(n+1)\Delta t}r_{t}dt-\intop_{0}^{n\Delta t}r_{t}dt\\
 & =\frac{\left(r_{0}-\overline{r}\right)\left(-e^{-\alpha(n+1)\Delta t}+e^{-\alpha n\Delta t}\right)}{\alpha}+\overline{r}\Delta t-\frac{\sigma}{\alpha}\left(Z_{(n+1)\Delta t}-Z_{n\Delta t}\right)\\
 & =\frac{\left(r_{0}-\overline{r}\right)\left(e^{-\alpha n\Delta t}-e^{-\alpha(n+1)\Delta t}\right)}{\alpha}+\overline{r}\Delta t\\
 & -\frac{\sigma}{\alpha}\left[\intop_{0}^{(n+1)\Delta t}\left(e^{\alpha s-\alpha(n+1)\Delta t}-1\right)dW_{s}-\intop_{0}^{n\Delta t}\left(e^{\alpha s-\alpha n\Delta t}-1\right)dW_{s}\right]\\
 & =\frac{\left(r_{0}-\overline{r}\right)\left(e^{-\alpha n\Delta t}-e^{-\alpha(n+1)\Delta t}\right)}{\alpha}+\overline{r}\Delta t\\
 & -\frac{\sigma}{\alpha}\left\{ \intop_{0}^{n\Delta t}e^{\alpha(s-n\Delta t)}\left(e^{-\alpha\Delta t}-1\right)dW_{s}+\intop_{n\Delta t}^{(n+1)\Delta t}\left[e^{\alpha\left(s-(n+1)\Delta t\right)}-1\right]dW_{s}\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Similarly,
\begin_inset Formula 
\begin{align*}
\intop_{n\Delta t}^{(n+1)\Delta t}I_{t}dt & =\frac{\left(I_{0}-\overline{I}\right)\left(e^{-\beta n\Delta t}-e^{-\beta(n+1)\Delta t}\right)}{\beta}+\overline{I}\Delta t\\
 & -\frac{\eta}{\beta}\left\{ \intop_{0}^{n\Delta t}e^{\beta(s-n\Delta t)}\left(e^{-\beta\Delta t}-1\right)dB_{s}+\intop_{n\Delta t}^{(n+1)\Delta t}\left[e^{\beta\left(s-(n+1)\Delta t\right)}-1\right]dB_{s}\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Now write 
\begin_inset Formula $dB_{t}$
\end_inset

 as
\begin_inset Formula 
\[
dB_{t}=\rho dW_{t}+\sqrt{1-\rho^{2}}dW'_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $W_{t}\perp W'_{t}$
\end_inset

.
 Then we have
\begin_inset Formula 
\begin{align*}
\intop_{n\Delta t}^{(n+1)\Delta t}I_{t}dt & =\frac{\left(I_{0}-\overline{I}\right)\left(e^{-\beta n\Delta t}-e^{-\beta(n+1)\Delta t}\right)}{\beta}+\overline{I}\Delta t\\
 & -\frac{\eta}{\beta}\left\{ \intop_{0}^{n\Delta t}e^{\beta(s-n\Delta t)}\left(e^{-\beta\Delta t}-1\right)\rho dW_{s}+\intop_{n\Delta t}^{(n+1)\Delta t}\left[e^{\beta\left(s-(n+1)\Delta t\right)}-1\right]\rho dW_{s}\right\} \\
 & -\frac{\eta}{\beta}\left\{ \intop_{0}^{n\Delta t}e^{\beta(s-n\Delta t)}\left(e^{-\beta\Delta t}-1\right)\sqrt{1-\rho^{2}}dW'_{s}+\intop_{n\Delta t}^{(n+1)\Delta t}\left[e^{\beta\left(s-(n+1)\Delta t\right)}-1\right]\sqrt{1-\rho^{2}}dW'_{s}\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Therefore
\begin_inset Formula 
\begin{align*}
\text{} & \mathbb{E}\left[\left(\intop_{n\Delta t}^{(n+1)\Delta t}r_{t}dt\right)\left(\intop_{n\Delta t}^{(n+1)\Delta t}I_{t}dt\right)\right]-\mathbb{E}\left(\intop_{n\Delta t}^{(n+1)\Delta t}r_{t}dt\right)\mathbb{E}\left(\intop_{n\Delta t}^{(n+1)\Delta t}I_{t}dt\right)\\
= & \frac{\sigma\eta}{\alpha\beta}\intop_{0}^{n\Delta t}e^{\alpha(s-n\Delta t)}\left(e^{-\alpha\Delta t}-1\right)e^{\beta(s-n\Delta t)}\left(e^{-\beta\Delta t}-1\right)\rho ds\\
 & +\frac{\sigma\eta}{\alpha\beta}\intop_{n\Delta t}^{(n+1)\Delta t}\left[e^{\alpha\left(s-(n+1)\Delta t\right)}-1\right]\left[e^{\beta\left(s-(n+1)\Delta t\right)}-1\right]\rho ds
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
That is,
\begin_inset Formula 
\begin{align*}
 & \text{cov}\left[\intop_{n\Delta t}^{(n+1)\Delta t}r_{t}dt,\intop_{n\Delta t}^{(n+1)\Delta t}I_{t}dt\right]\\
= & \frac{\sigma\eta}{\alpha\beta}\intop_{0}^{n\Delta t}e^{(\alpha+\beta)(s-n\Delta t)}\left(e^{-(\alpha+\beta)\Delta t}-e^{-\alpha\Delta t}-e^{-\beta\Delta t}+1\right)\rho ds\\
 & +\frac{\sigma\eta}{\alpha\beta}\intop_{n\Delta t}^{(n+1)\Delta t}\left[e^{(\alpha+\beta)(s-(n+1)\Delta t)}-e^{\alpha\left(s-(n+1)\Delta t\right)}-e^{\beta\left(s-(n+1)\Delta t\right)}+1\right]\rho ds\\
= & \frac{\sigma\eta}{\alpha\beta}\rho\left(e^{-(\alpha+\beta)\Delta t}-e^{-\alpha\Delta t}-e^{-\beta\Delta t}+1\right)e^{-(\alpha+\beta)n\Delta t}\frac{e^{(\alpha+\beta)n\Delta t}-1}{\alpha+\beta}\\
 & +\frac{\sigma\eta}{\alpha\beta}\rho\frac{e^{-(\alpha+\beta)(n+1)\Delta t}}{\alpha+\beta}e^{(\alpha+\beta)n\Delta t}\left(e^{(\alpha+\beta)\Delta t}-1\right)\\
 & -\frac{\sigma\eta}{\alpha\beta}\rho e^{-\alpha(n+1)\Delta t}\frac{e^{\alpha n\Delta t}\left(e^{\alpha\Delta t}-1\right)}{\alpha}-\frac{\sigma\eta}{\alpha\beta}\rho e^{-\beta(n+1)\Delta t}\frac{e^{\beta n\Delta t}\left(e^{\beta\Delta t}-1\right)}{\beta}\\
 & +\frac{\sigma\eta}{\alpha\beta}\rho\Delta t
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Simplifying the expression,
 we get
\begin_inset Formula 
\begin{align*}
 & \text{cov}\left[\intop_{n\Delta t}^{(n+1)\Delta t}r_{t}dt,\intop_{n\Delta t}^{(n+1)\Delta t}I_{t}dt\right]\\
= & \frac{\rho}{\alpha+\beta}\frac{\sigma\eta}{\alpha\beta}\left[e^{-(\alpha+\beta)\Delta t}-e^{-\alpha\Delta t}-e^{-\beta\Delta t}+1\right]\left[1-e^{-(\alpha+\beta)n\Delta t}\right]\\
 & +\rho\frac{\sigma\eta}{\alpha\beta}\left[\frac{1-e^{-(\alpha+\beta)\Delta t}}{\alpha+\beta}-\frac{1-e^{-\alpha\Delta t}}{\alpha}-\frac{1-e^{-\beta\Delta t}}{\beta}+\Delta t\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
This expression allows us to estimate 
\begin_inset Formula $\rho$
\end_inset

.
\end_layout

\begin_layout Section
Calibrating the risk-free rate model to a yield curve
\end_layout

\begin_layout Subsection
Continuously compounded interest
\end_layout

\begin_layout Standard
Suppose we have a yield curve 
\begin_inset Formula $\{T_{i},R_{i}\}_{i=1,2,3,\dots}$
\end_inset

,
 where 
\begin_inset Formula $T_{i}$
\end_inset

 is the 
\begin_inset Formula $i$
\end_inset

-th time-to-maturity and 
\begin_inset Formula $R_{i}$
\end_inset

 is the corresponding spot rate.
 We would like to calibrate to this yield curve the short rate model
\begin_inset Formula 
\begin{equation}
dr_{t}=-\alpha\left(r_{t}-\overline{r}\right)dt+\sigma dW_{t}\label{eq:trh6h6h}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The spot rate 
\begin_inset Formula $R_{i}$
\end_inset

 is calculated according to the expected yield to maturity
\begin_inset Formula 
\[
\mathbb{E}\exp\left(\intop_{0}^{T_{i}}r_{t}dt\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Using the results from the last section,
 we have
\begin_inset Formula 
\[
\intop_{0}^{T}r_{t}dt=\frac{\left(r_{0}-\bar{r}\right)\left(1-e^{-\alpha T}\right)}{\alpha}+\bar{r}T-\frac{\sigma}{\alpha}\intop_{0}^{T}\left[e^{\alpha(t-T)}-1\right]dW_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
The variance of this integral is
\begin_inset Formula 
\[
\text{var}\left(\intop_{0}^{T}r_{t}dt\right)=\frac{\sigma^{2}}{\alpha^{2}}\left(\frac{1-e^{-2\alpha T}}{2\alpha}-2\cdot\frac{1-e^{-\alpha T}}{\alpha}+T\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Therefore,
\begin_inset Formula 
\[
\mathbb{E}\exp\left(\intop_{0}^{T}r_{t}dt\right)=\exp\left[\frac{\left(r_{0}-\bar{r}\right)\left(1-e^{-\alpha T}\right)}{\alpha}+\bar{r}T+\frac{\sigma^{2}}{2\alpha^{2}}\left(\frac{1-e^{-2\alpha T}}{2\alpha}-2\cdot\frac{1-e^{-\alpha T}}{\alpha}+T\right)\right]
\]

\end_inset


\end_layout

\begin_layout Subsection
Content of a Yield Curve 
\end_layout

\begin_layout Standard
Now suppose the risk-free rate at time 
\begin_inset Formula $t$
\end_inset

 is 
\begin_inset Formula $r_{t}$
\end_inset

.
 Then
\begin_inset Formula 
\[
\mathbb{E}\exp\left(\intop_{t}^{t+\Delta t}r_{s}ds\right)=\begin{cases}
1+R_{t,\Delta t}\Delta t & \Delta t<1\\
\left(1+R_{t,\Delta t}\right)^{\Delta t} & \Delta t>1
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
Hence
\begin_inset Formula 
\begin{align*}
\exp\left[\frac{\left(r_{t}-\bar{r}\right)\left(1-e^{-\alpha\Delta t}\right)}{\alpha}+\bar{r}\Delta t+\frac{\sigma^{2}}{2\alpha^{2}}\left(\frac{1-e^{-2\alpha\Delta t}}{2\alpha}-2\cdot\frac{1-e^{-\alpha\Delta t}}{\alpha}+\Delta t\right)\right] & =\begin{cases}
1+R_{t,\Delta t}\Delta t & \Delta t<1\\
\left(1+R_{t,\Delta t}\right)^{\Delta t} & \Delta t>1
\end{cases}\\
\frac{\left(r_{t}-\bar{r}\right)\left(1-e^{-\alpha\Delta t}\right)}{\alpha}+\bar{r}\Delta t+\frac{\sigma^{2}}{2\alpha^{2}}\left(\frac{1-e^{-2\alpha\Delta t}}{2\alpha}-2\cdot\frac{1-e^{-\alpha\Delta t}}{\alpha}+\Delta t\right) & =\begin{cases}
\ln\left(1+R_{t,\Delta t}\Delta t\right) & \Delta t<1\\
\Delta t\ln\left(1+R_{t,\Delta t}\right) & \Delta t>1
\end{cases}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
The last expression allows us to estimate 
\begin_inset Formula $r_{t}$
\end_inset

 as well as the parameters 
\begin_inset Formula $\alpha,\bar{r},\sigma$
\end_inset

 by OLS.
\end_layout

\begin_layout Subsection
When the mean-reversion rate is very small
\end_layout

\begin_layout Standard
We consider the case when 
\begin_inset Formula $\alpha\to0$
\end_inset

.
 In this case,
 the defining SDE of the process 
\begin_inset Formula $r_{t}$
\end_inset

,
 i.e.
 (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:trh6h6h"

\end_inset

) becomes
\begin_inset Formula 
\[
dr_{t}=\sigma dW_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
Thus
\lang american

\begin_inset Formula 
\begin{align*}
r_{t} & =\sigma W_{t}+r_{0}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard

\lang american
Then
\begin_inset Formula 
\begin{align*}
\intop_{0}^{t}r_{s}ds & =r_{0}t+\sigma\intop_{0}^{t}W_{s}ds\\
 & =r_{0}t+\sigma\left[sW_{s}\right]_{s=0}^{t}-\sigma\intop_{0}^{t}sdW_{s}\\
 & =r_{0}t+\sigma tW_{t}-\sigma\intop_{0}^{t}sdW_{s}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard

\lang american
We have
\begin_inset Formula 
\[
\mathbb{E}\left(\intop_{0}^{t}r_{s}ds\right)=r_{0}t
\]

\end_inset


\end_layout

\begin_layout Standard

\lang american
and
\begin_inset Formula 
\begin{align*}
\sigma tW_{t}-\sigma\intop_{0}^{t}sdW_{s} & =\sigma t\intop_{0}^{t}dW_{s}-\sigma\intop_{0}^{t}sdW_{s}\\
 & =\sigma\intop_{0}^{t}\left(t-s\right)dW_{s}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard

\lang american
Therefore
\begin_inset Formula 
\begin{align*}
\text{var}\left(\intop_{0}^{t}r_{s}ds\right) & =\sigma^{2}\intop_{0}^{t}\left(t-s\right)^{2}ds\\
 & =\sigma^{2}\intop_{0}^{t}\left(s-t\right)^{2}d\left(s-t\right)\\
 & =\sigma^{2}\left[\frac{\left(s-t\right)^{3}}{3}\right]_{s=0}^{t}\\
 & =\sigma^{2}\left[\frac{\left(t-t\right)^{3}-\left(0-t\right)^{3}}{3}\right]\\
 & =\sigma^{2}\frac{t^{3}}{3}
\end{align*}

\end_inset


\end_layout

\begin_layout Section
FX Option pricing
\end_layout

\begin_layout Subsection
European call option
\end_layout

\begin_layout Standard
Consider a European call option 
\begin_inset Formula $C_{t}$
\end_inset

 on the GBP/USD rate that matures at time 
\begin_inset Formula $T$
\end_inset

 and has strike price 
\begin_inset Formula $K$
\end_inset

.
 Clearly,
\begin_inset Formula 
\[
C_{0}=\mathbb{E}_{Q}\left[\exp\left(-\intop_{0}^{T}r_{A,t}dt\right)\left(X_{T}-K\right)1_{X_{T}>K}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $Q$
\end_inset

 is the Martingale measure defined by its Radon-Nikodym derivative w.r.t.
 the real-world measure P:
\begin_inset Formula 
\[
\frac{dQ}{dP}=\exp\left[-\intop_{0}^{T}u_{t}dB_{t}-\frac{1}{2}\intop_{0}^{T}u_{t}^{2}dt\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $Y_{t}=\ln X_{t}$
\end_inset

 so that 
\begin_inset Formula $X_{t}=e^{Y_{t}}$
\end_inset

.
 We have
\begin_inset Formula 
\[
dX_{t}=X_{t}dY_{t}+\frac{1}{2}X_{t}\left(dY_{t}\right)^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
From
\begin_inset Formula 
\[
dY_{t}=-\theta\left(Y_{t}-\ln p_{t}\right)dt+\kappa\left(r_{B,t}-r_{A,t}\right)dt+\sigma dW_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
it can be deduced
\begin_inset Formula 
\[
dX_{t}=-\theta\left(Y_{t}-\ln p_{t}\right)X_{t}dt+\kappa\left(r_{B,t}-r_{A,t}\right)X_{t}dt+\frac{1}{2}X_{t}\sigma^{2}dt+\sigma X_{t}dW_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
Thus,
 by Girsanov's theorem,
 we have
\begin_inset Formula 
\[
dX_{t}=r_{A,t}X_{t}dt+\sigma X_{t}d\tilde{W}_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\tilde{W}_{t}$
\end_inset

 is a Brownian motion of 
\begin_inset Formula $Q$
\end_inset

.
 It then follows
\begin_inset Formula 
\begin{align*}
d\ln X_{t} & =\left(r_{A,t}dt+\sigma d\tilde{B}_{t}\right)-\frac{1}{2X_{t}^{2}}\sigma^{2}X_{t}^{2}dt\\
 & =\left(r_{A,t}-\frac{\sigma^{2}}{2}\right)dt+\sigma d\tilde{W}_{t}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Therefore,
\begin_inset Formula 
\begin{align}
\ln X_{t} & =\ln X_{0}+\intop_{0}^{t}\left(r_{A,s}-\frac{\sigma^{2}}{2}\right)ds+\sigma\tilde{W}_{t}\nonumber \\
X_{t} & =X_{0}\exp\left[\intop_{0}^{t}r_{A,s}ds-\frac{\sigma^{2}}{2}t+\sigma\tilde{W}_{t}\right]\label{eq:5g5th6j7uj}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\xi_{t}=\exp\left(-\intop_{0}^{T}r_{A,t}dt\right)$
\end_inset

.
 Then
\begin_inset Formula 
\[
X_{t}=X_{0}\xi_{t}^{-1}\exp\left(\sigma\tilde{W}_{t}-\frac{\sigma^{2}}{2}t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Therefore,
\begin_inset Formula 
\begin{align}
C_{0} & =\mathbb{E}_{Q}\left[\xi_{T}\left(X_{T}-K\right)1_{\left\{ X_{T}>K\right\} }\right]\nonumber \\
 & =\mathbb{E}_{Q}\left[X_{0}\exp\left(\sigma\tilde{W}_{T}-\frac{\sigma^{2}}{2}T\right);X_{T}>K\right]-K\mathbb{E}_{Q}\left(\xi_{T};X_{T}>K\right)\label{eq:45g5vyb}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Notice that for the 
\begin_inset Formula $r_{A,t}$
\end_inset

 integral,
 we have
\begin_inset Formula 
\[
\intop_{0}^{T}r_{A,t}dt=\frac{\left(r_{A,0}-\bar{r}_{A}\right)\left(1-e^{-\alpha_{A}T}\right)}{\alpha_{A}}+\bar{r}_{A}T-\frac{\sigma_{A}}{\alpha_{A}}\intop_{0}^{T}\left[e^{\alpha_{A}(t-T)}-1\right]dW_{A,t}
\]

\end_inset


\end_layout

\begin_layout Standard
The variance of this integral is
\begin_inset Formula 
\begin{align*}
\text{var}\left(\intop_{0}^{T}r_{A,t}dt\right) & =\frac{\sigma_{A}^{2}}{\alpha_{A}^{2}}\intop_{0}^{T}\left[e^{\alpha_{A}(t-T)}-1\right]^{2}dt\\
 & =\frac{\sigma_{A}^{2}}{\alpha_{A}^{2}}\left(\frac{1-e^{-2\alpha_{A}T}}{2\alpha_{A}}-2\frac{1-e^{-\alpha_{A}T}}{\alpha_{A}}+T\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Clearly,
\begin_inset Formula 
\begin{align*}
X_{T}>K & \Leftrightarrow X_{0}\xi_{T}^{-1}\exp\left(\sigma\tilde{W}_{T}-\frac{\sigma^{2}}{2}T\right)>K\\
 & \Leftrightarrow\exp\left(\intop_{0}^{T}r_{A,t}dt+\sigma\tilde{W}_{T}-\frac{\sigma^{2}}{2}T\right)>\frac{K}{X_{0}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
 & \mathbb{E}_{Q}\left[X_{0}\exp\left(\sigma\tilde{W}_{T}-\frac{\sigma^{2}}{2}T\right);X_{T}>K\right]\\
= & X_{0}\intop_{-\infty}^{\infty}\intop_{-\infty}^{\infty}\exp\left(\sigma\sqrt{T}x-\frac{\sigma^{2}}{2}T\right)\chi\left[\sigma\sqrt{T}x-\sigma^{2}T/2+ay+b>\ln\left(K/X_{0}\right)\right]\phi(x)\phi(y)dxdy
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\chi$
\end_inset

 is the indicator function and
\begin_inset Formula 
\begin{align*}
a & =\frac{\sigma_{A}}{\alpha_{A}}\sqrt{\frac{1-e^{-2\alpha_{A}T}}{2\alpha_{A}}-2\cdot\frac{1-e^{-\alpha_{A}T}}{\alpha_{A}}+T}\\
b & =\frac{\left(r_{A,0}-\bar{r}_{A}\right)\left(1-e^{-\alpha_{A}T}\right)}{\alpha_{A}}+\bar{r}_{A}T
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Of course,
\begin_inset Formula 
\begin{align*}
 & \sigma\sqrt{T}x-\sigma^{2}T/2+ay+b>\ln\left(K/X_{0}\right)\\
\Leftrightarrow & y>-\frac{\sigma}{a}\sqrt{T}x+\frac{\sigma^{2}T}{2a}-\frac{b}{a}+\frac{1}{a}\ln\frac{K}{X_{0}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
So we have
\begin_inset Formula 
\begin{align*}
 & \mathbb{E}_{Q}\left[X_{0}\exp\left(\sigma\tilde{W}_{T}-\frac{\sigma^{2}}{2}T\right);X_{T}>K\right]\\
= & X_{0}\intop_{-\infty}^{\infty}\left[\intop_{-\frac{\sigma}{a}\sqrt{T}x+\frac{\sigma^{2}T}{2a}-\frac{b}{a}+\frac{1}{a}\ln\frac{K}{X_{0}}}^{\infty}e^{\sigma\sqrt{T}x-\sigma^{2}T/2}\phi(y)dy\right]\phi(x)dx\\
= & X_{0}e^{-\sigma^{2}T/2}\intop_{-\infty}^{\infty}e^{\sigma\sqrt{T}x}\Phi\left(\frac{\sigma}{a}\sqrt{T}x-\frac{\sigma^{2}T}{2a}+\frac{b}{a}-\frac{1}{a}\ln\frac{K}{X_{0}}\right)\cdot\phi(x)dx
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\Phi(x)=x'$
\end_inset

 such that
\begin_inset Formula 
\begin{align*}
 & \mathbb{E}_{Q}\left[X_{0}\exp\left(\sigma\tilde{W}_{T}-\frac{\sigma^{2}}{2}T\right);X_{T}>K\right]\\
= & X_{0}e^{-\sigma^{2}T/2}\intop_{0}^{1}e^{\sigma\sqrt{T}\Phi^{-1}(x')}\Phi\left[\frac{\sigma}{a}\sqrt{T}\Phi^{-1}(x')-\frac{\sigma^{2}T}{2a}+\frac{b}{a}-\frac{1}{a}\ln\frac{K}{X_{0}}\right]dx'
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Similarly,
\begin_inset Formula 
\begin{align*}
 & \mathbb{E}_{Q}\left(\xi_{T};X_{T}>K\right)\\
= & \intop_{-\infty}^{\infty}\left[\intop_{-\frac{\sigma}{a}\sqrt{T}x+\frac{\sigma^{2}T}{2a}-\frac{b}{a}+\frac{1}{a}\ln\frac{K}{X_{0}}}^{\infty}e^{-ay-b}\phi(y)dy\right]\phi(x)dx
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Let
\begin_inset Formula 
\[
f(x)=-\frac{\sigma}{a}\sqrt{T}x+\frac{\sigma^{2}T}{2a}-\frac{b}{a}+\frac{1}{a}\ln\frac{K}{X_{0}}
\]

\end_inset


\end_layout

\begin_layout Standard
Then we have
\begin_inset Formula 
\begin{align*}
\intop_{f(x)}^{\infty}e^{-ay-b}\phi(y)dy & =\frac{1}{\sqrt{2\pi}}\intop_{f(x)}^{\infty}\exp\left(-\frac{y^{2}}{2}-ay-b\right)dy\\
 & =\frac{1}{\sqrt{2\pi}}\intop_{f(x)}^{\infty}\exp\left[-\frac{1}{2}\left(y+a\right)^{2}+\frac{a^{2}}{2}-b\right]dy\\
 & =\frac{1}{\sqrt{2\pi}}\intop_{f(x)+a}^{\infty}\exp\left[-\frac{1}{2}y'^{2}+\frac{a^{2}}{2}-b\right]dy'\\
 & =e^{a^{2}/2-b}\Phi\left[-f(x)-a\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Then it follows
\begin_inset Formula 
\begin{align*}
\mathbb{E}_{Q}\left(\xi_{T};X_{T}>K\right) & =\intop_{-\infty}^{\infty}e^{a^{2}/2-b}\Phi\left[-f(x)-a\right]\phi(x)dx\\
 & =\intop_{0}^{1}e^{a^{2}/2-b}\Phi\left[-f\left(\Phi^{-1}(x')\right)-a\right]dx'
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Putting together the two terms in (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:45g5vyb"

\end_inset

),
 we get
\begin_inset Formula 
\begin{align*}
 & \mathbb{E}_{Q}\left[\xi_{T}\left(X_{T}-K\right)1_{\left\{ X_{T}>K\right\} }\right]\\
= & X_{0}e^{-\sigma^{2}T/2}\intop_{0}^{1}e^{\sigma\sqrt{T}\Phi^{-1}(x')}\Phi\left[-f\left(\Phi^{-1}(x')\right)\right]dx'\\
 & -K\intop_{0}^{1}e^{a^{2}/2-b}\Phi\left[-f\left(\Phi^{-1}(x')\right)-a\right]dx'\\
= & \intop_{0}^{1}\left\{ X_{0}e^{-\sigma^{2}T/2}e^{\sigma\sqrt{T}\Phi^{-1}(x')}\Phi\left[-f\left(\Phi^{-1}(x')\right)\right]-Ke^{a^{2}/2-b}\Phi\left[-f\left(\Phi^{-1}(x')\right)-a\right]\right\} dx'
\end{align*}

\end_inset


\end_layout

\begin_layout Section
FX Futures and Futures' options
\end_layout

\begin_layout Subsection
Future
\end_layout

\begin_layout Standard
Consider an FX future with delivery date 
\begin_inset Formula $T$
\end_inset

.
 Its price at time 
\begin_inset Formula $t$
\end_inset

 is given by 
\begin_inset Formula 
\begin{align*}
F_{t} & =\mathbb{E}_{Q}\left(X_{T}|\mathcal{F}_{t}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $Q$
\end_inset

 is the risk-neutral probability measure.
 Equation (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:5g5th6j7uj"

\end_inset

) gives
\begin_inset Formula 
\[
X_{t}=X_{0}\exp\left[\intop_{0}^{t}r_{A,s}ds-\frac{\sigma^{2}}{2}t+\sigma\tilde{W}_{t}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $r_{A,s}$
\end_inset

 is the risk-free rate of the quote currency.
 Therefore
\begin_inset Formula 
\begin{align}
F_{t} & =X_{t}\mathbb{E}_{Q}\exp\left[\intop_{t}^{T}r_{A,s}ds-\frac{\sigma^{2}}{2}\left(T-t\right)+\sigma\left(\tilde{W}_{T}-\tilde{W}_{t}\right)|\mathcal{F}_{t}\right]\nonumber \\
 & =X_{t}\mathbb{E}_{Q}\left[\exp\left(\intop_{t}^{T}r_{A,s}ds\right)|\mathcal{F}_{t}\right]\cdot\mathbb{E}_{Q}\left[-\frac{\sigma^{2}}{2}\left(T-t\right)+\sigma\left(\tilde{W}_{T}-\tilde{W}_{t}\right)|\mathcal{F}_{t}\right]\\
 & =X_{t}\mathbb{E}_{Q}\left[\exp\left(\intop_{t}^{T}r_{A,s}ds\right)|\mathcal{F}_{t}\right]\label{eq:g5y7j78k8k5g}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
We model 
\begin_inset Formula $r_{A,t}$
\end_inset

 as
\begin_inset Formula 
\[
dr_{A,t}=-\alpha_{A}\left(r_{A,t}-\overline{r}_{A}\right)dt+\sigma_{A}dW_{A,t}
\]

\end_inset


\end_layout

\begin_layout Standard
Hence for 
\begin_inset Formula $T'<T$
\end_inset


\begin_inset Formula 
\begin{equation}
\intop_{T'}^{T}r_{A,t}dt=\frac{\left(r_{A,T'}-\bar{r}_{A}\right)\left(1-e^{-\alpha_{A}(T-T')}\right)}{\alpha_{A}}+\bar{r}_{A}\left(T-T'\right)-\frac{\sigma_{A}}{\alpha_{A}}\intop_{T'}^{T}\left[e^{\alpha_{A}(t-T)}-1\right]dW_{A,t}\label{eq:hg65uik87k8}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Therefore
\begin_inset Formula 
\begin{align*}
\mathbb{E}_{Q}\left[\exp\left(\intop_{T'}^{T}r_{A,t}dt\right)|\mathcal{F}_{T'}\right] & =\exp\left[\frac{\left(r_{A,T'}-\bar{r}_{A}\right)\left(1-e^{-\alpha_{A}(T-T')}\right)}{\alpha_{A}}+\bar{r}_{A}\left(T-T'\right)\right]\\
 & \times\exp\left[\frac{\sigma_{A}^{2}}{2\alpha_{A}^{2}}\left(\frac{1-e^{-2\alpha_{A}(T-T')}}{2\alpha_{A}}-2\frac{1-e^{-\alpha_{A}(T-T')}}{\alpha_{A}}+(T-T')\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Define 
\begin_inset Formula $q_{1}$
\end_inset

 and 
\begin_inset Formula $q_{2}$
\end_inset

:
\begin_inset Formula 
\begin{align}
q_{1} & =\frac{1-e^{-\alpha_{A}(T-T')}}{\alpha_{A}}\label{eq:q3r54g65h}\\
q_{2} & =\bar{r}_{A}\left(T-T'\right)+\frac{\sigma_{A}^{2}}{2\alpha_{A}^{2}}\left(\frac{1-e^{-2\alpha_{A}(T-T')}}{2\alpha_{A}}-2\frac{1-e^{-\alpha_{A}(T-T')}}{\alpha_{A}}+(T-T')\right)\label{eq:q5g5h7ju7j}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
So we can write
\begin_inset Formula 
\[
\mathbb{E}_{Q}\left[\exp\left(\intop_{T'}^{T}r_{A,t}dt\right)|\mathcal{F}_{T'}\right]=e^{q_{1}\left(r_{A,T'}-\overline{r}_{A}\right)+q_{2}}
\]

\end_inset


\end_layout

\begin_layout Standard
Thus we have
\begin_inset Formula 
\[
F_{T'}=X_{T'}e^{q_{1}\left(r_{A,T'}-\overline{r}_{A}\right)+q_{2}}
\]

\end_inset


\end_layout

\begin_layout Standard
