\begin_layout Subsection
Future's option
\end_layout

\begin_layout Standard
Now consider a call option on 
\begin_inset Formula $F_{t}$
\end_inset

.
 Its price at time 
\begin_inset Formula $t$
\end_inset

 is 
\begin_inset Formula $C_{t}$
\end_inset

.
 Its strike price is 
\begin_inset Formula $K$
\end_inset

 and it expires at 
\begin_inset Formula $T'<T$
\end_inset

.
 We have
\begin_inset Formula 
\[
C_{T'}=\left(F_{T'}-K\right)\chi\left(F_{T'}>K\right)
\]

\end_inset


\end_layout

\begin_layout Standard
and
\begin_inset Formula 
\[
C_{t}=\mathbb{E}_{Q}\left[\exp\left(-\intop_{t}^{T'}r_{A,s}ds\right)\cdot\left(F_{T'}-K\right)\chi\left(F_{T'}>K\right)|\mathcal{F}_{t}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\chi$
\end_inset

 in the above denotes the indicator function.
 
\begin_inset Formula $t\leq T'$
\end_inset

.
 It follows
\begin_inset Formula 
\[
C_{t}=A_{t}-B_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
with
\begin_inset Formula 
\begin{align*}
A_{t} & =\mathbb{E}_{Q}\left[\exp\left(-\intop_{t}^{T'}r_{A,s}ds\right)F_{T'}\chi\left(F_{T'}>K\right)|\mathcal{F}_{t}\right]\\
B_{t} & =K\mathbb{E}_{Q}\left[\exp\left(-\intop_{t}^{T'}r_{A,s}ds\right)\cdot\chi\left(F_{T'}>K\right)|\mathcal{F}_{t}\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
From (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:g5y7j78k8k5g"

\end_inset

),
 we get
\begin_inset Formula 
\begin{align*}
F_{T'} & =X_{T'}\mathbb{E}_{Q}\left[\exp\left(\intop_{T'}^{T}r_{A,s}ds\right)|\mathcal{F}_{T'}\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard

\end_layout

\begin_layout Standard
(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:5g5th6j7uj"

\end_inset

) gives
\begin_inset Formula 
\[
X_{T'}=X_{t}\exp\left[\intop_{t}^{T'}r_{A,s}ds-\frac{\sigma^{2}}{2}\left(T'-t\right)+\sigma\left(\tilde{W}_{T'}-\tilde{W}_{t}\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Then
\begin_inset Formula 
\[
F_{T'}=X_{t}\exp\left[\intop_{t}^{T'}r_{A,s}ds-\frac{\sigma^{2}}{2}\left(T'-t\right)+\sigma\left(\tilde{W}_{T'}-\tilde{W}_{t}\right)+q_{1}\left(r_{A,T'}-\overline{r}_{A}\right)+q_{2}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $q_{1},q_{2}$
\end_inset

 are defined by (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:q3r54g65h"

\end_inset

) and (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:q5g5h7ju7j"

\end_inset

).
 Hence
\begin_inset Formula 
\begin{align*}
A_{t} & =\mathbb{E}_{Q}\left[\exp\left(-\intop_{t}^{T'}r_{A,s}ds\right)F_{T'}\chi\left(F_{T'}>K\right)|\mathcal{F}_{t}\right]\\
 & =\mathbb{E}_{Q}\left\{ \exp\left[-\frac{\sigma^{2}}{2}\left(T'-t\right)+\sigma\left(\tilde{W}_{T'}-\tilde{W}_{t}\right)+q_{1}\left(r_{A,T'}-\overline{r}_{A}\right)+q_{2}\right]\chi\left(F_{T'}>K\right)|\mathcal{F}_{t}\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Expand the condition 
\begin_inset Formula $F_{T'}>K$
\end_inset

 as
\begin_inset Formula 
\[
X_{t}\exp\left[\intop_{t}^{T'}r_{A,s}ds-\frac{\sigma^{2}}{2}\left(T'-t\right)+\sigma\left(\tilde{W}_{T'}-\tilde{W}_{t}\right)+q_{1}\left(r_{A,T'}-\overline{r}_{A}\right)+q_{2}\right]>K
\]

\end_inset


\end_layout

\begin_layout Standard
Moreover,
 we can write 
\begin_inset Formula $r_{A,T'}$
\end_inset

 as
\begin_inset Formula 
\begin{equation}
r_{A,T'}=\left(r_{A,t}-\bar{r}_{A}\right)e^{-\alpha_{A}(T'-t)}+\bar{r}_{A}+\sigma_{A}\intop_{t}^{T'}e^{\alpha_{A}\left(s-T'\right)}dW_{A,s}\label{eq:h67j7uk89l}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
and 
\begin_inset Formula $\intop_{t}^{T'}r_{A,s}ds$
\end_inset

 as
\begin_inset Formula 
\begin{equation}
\intop_{t}^{T'}r_{A,s}ds=\frac{\left(r_{A,t}-\bar{r}_{A}\right)\left[1-e^{-\alpha_{A}\left(T'-t\right)}\right]}{\alpha_{A}}+\bar{r}_{A}\left(T'-t\right)-\frac{\sigma_{A}}{\alpha_{A}}\intop_{t}^{T'}\left[e^{\alpha_{A}\left(s-T'\right)}-1\right]dW_{A,s}\label{eq:7j78k89ll9}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
\text{cov}\left(\intop_{t}^{T'}r_{A,s}ds,r_{A,T'}\right) & =\frac{\sigma_{A}^{2}}{\alpha_{A}}\mathbb{E}\left\{ \left[\intop_{t}^{T'}e^{\alpha_{A}\left(s-T'\right)}dW_{A,s}\right]\cdot\left[\intop_{t}^{T'}\left[e^{\alpha_{A}\left(s-T'\right)}-1\right]dW_{A,s}\right]\right\} \\
 & =\frac{\sigma_{A}^{2}}{\alpha_{A}}\intop_{t}^{T'}\left[e^{2\alpha_{A}\left(s-T'\right)}-e^{\alpha_{A}\left(s-T'\right)}\right]ds\\
 & =\frac{\sigma_{A}^{2}}{\alpha_{A}}\left[\frac{1-e^{-2\alpha_{A}\left(T'-t\right)}}{2\alpha_{A}}-\frac{1-e^{-\alpha_{A}\left(T'-t\right)}}{\alpha_{A}}\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
and
\begin_inset Formula 
\begin{align*}
\text{var}\left(\intop_{t}^{T'}r_{A,s}ds\right) & =\frac{\sigma_{A}^{2}}{\alpha_{A}^{2}}\intop_{t}^{T'}\left[e^{\alpha_{A}\left(s-T'\right)}-1\right]^{2}ds\\
 & =\frac{\sigma_{A}^{2}}{\alpha_{A}^{2}}\left[\frac{1-e^{-2\alpha_{A}\left(T'-t\right)}}{2\alpha_{A}}-2\frac{1-e^{-\alpha_{A}\left(T'-t\right)}}{\alpha_{A}}+\left(T'-t\right)\right]\\
\text{var}\left(r_{A,T'}\right) & =\sigma_{A}^{2}\intop_{t}^{T'}e^{2\alpha_{A}\left(s-T'\right)}ds\\
 & =\sigma_{A}^{2}\frac{1-e^{-2\alpha_{A}\left(T'-t\right)}}{2\alpha_{A}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Let the variance-covariance matrix of 
\begin_inset Formula $r_{A,T'}$
\end_inset

 and 
\begin_inset Formula $\intop_{t}^{T'}r_{A,s}ds$
\end_inset

 be
\begin_inset Formula 
\[
C=\begin{bmatrix}\nu_{1}^{2} & \nu_{1}\nu_{2}\varphi\\
\nu_{1}\nu_{2}\varphi & \nu_{2}^{2}
\end{bmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
We can diagonalize 
\begin_inset Formula $C$
\end_inset

 as
\begin_inset Formula 
\begin{align*}
C & =\begin{bmatrix}p_{11} & p_{12}\\
p_{21} & p_{22}
\end{bmatrix}\begin{bmatrix}\lambda_{1} & 0\\
0 & \lambda_{2}
