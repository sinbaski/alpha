 & =b\left[(-1)^{2}\frac{1}{1-s}\right]_{s=0}^{t}+\intop_{0}^{t}\frac{dB_{s}}{1-s}\\
 & =b\left(\frac{1}{1-t}-1\right)+\intop_{0}^{t}\frac{dB_{s}}{1-s}\\
Y_{t} & =Y_{0}(1-t)+b\left[1-(1-t)\right]+\intop_{0}^{t}\frac{(1-t)}{1-s}dB_{s}\\
 & =Y_{0}\left(1-t\right)+bt+\intop_{0}^{t}\frac{(1-t)}{1-s}dB_{s}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
