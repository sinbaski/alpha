\[
R_{T}=\frac{X_{T}}{X_{0}}-1
\]

\end_inset


\end_layout

\begin_layout Standard
Define 
\begin_inset Formula $q(\alpha)$
\end_inset

 as 
\begin_inset Formula $\mathbb{P}\left(\frac{X_{T}}{X_{0}}-1\leq q\right)=1-\alpha$
\end_inset

.
 We have
\begin_inset Formula 
\begin{align*}
\mathbb{P}\left[X_{T}\leq X_{0}\left(1+q\right)\right] & =1-\alpha\\
\mathbb{P}\left[\log X_{T}\leq\ln X_{0}+\ln\left(1+q\right)\right] & =1-\alpha\\
\mathbb{P}\left[u+vH\leq\ln X_{0}+\ln(1+q)\right] & =1-\alpha\\
\mathbb{P}\left[H\leq\frac{\ln X_{0}+\ln(1+q)-u}{v}\right] & =1-\alpha\\
\frac{\ln X_{0}+\ln(1+q)-u}{v} & =\Phi^{-1}(1-\alpha)\\
\ln(1+q) & =v\Phi^{-1}(1-\alpha)+u-\ln X_{0}\\
q & =\frac{\exp\left[v\Phi^{-1}(1-\alpha)+u\right]}{X_{0}}-1
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Thus the expected shortfall is
\begin_inset Formula 
\[
\mathbb{E}\left(R_{T}|R_{T}\leq q\right)=\frac{1}{1-\alpha}\intop_{-1}^{q}xf(x)dx
\]

\end_inset


\end_layout

\begin_layout Standard
where
\begin_inset Formula 
\begin{align*}
f(x) & =\frac{d}{dx}\mathbb{P}\left(\frac{X_{T}}{X_{0}}-1\leq x\right)\\
 & =\frac{d}{dx}\mathbb{P}\left[X_{T}\leq X_{0}\left(1+x\right)\right]\\
 & =\frac{d}{dx}\mathbb{P}\left[u+vH\leq\ln X_{0}+\ln(1+x)\right]\\
 & =\frac{d}{dx}\mathbb{P}\left[H\leq\frac{\ln X_{0}+\ln(1+x)-u}{v}\right]\\
 & =\phi\left[\frac{\ln X_{0}+\ln(1+x)-u}{v}\right]\cdot\frac{d}{dx}\left[\frac{\ln X_{0}+\ln(1+x)-u}{v}\right]\\
 & =\phi\left[\frac{\ln X_{0}+\ln(1+x)-u}{v}\right]\cdot\frac{1}{v(1+x)}
\end{align*}

\end_inset


