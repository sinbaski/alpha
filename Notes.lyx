\begin_inset Formula 
\begin{align*}
\frac{\partial}{\partial t}p_{t}\left(x,y\right) & =\mathscr{A}^{*}p_{t}(x,y)\\
\frac{\partial}{\partial t}p_{t}\left(x,y\right) & =\frac{\sigma^{2}}{2}\left(y+1\right)\frac{\partial^{2}}{\partial y^{2}}p_{t}(x,y)+\left[\frac{\sigma^{2}}{2}+\kappa\left(y-\theta\right)\right]\frac{\partial}{\partial y}p_{t}(x,y)+\kappa p_{t}(x,y)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
The obvious boundary condition is 
\begin_inset Formula $p_{0}(x,x)=1$
\end_inset

.
 
\end_layout

\begin_layout Section
Market,
 portfolio and Arbitrage
\end_layout

\begin_layout Subsection
Market
\end_layout

\begin_layout Standard
A market is defined as an 
\begin_inset Formula $\mathcal{F}_{t}^{m}$
\end_inset

-adapted 
\begin_inset Formula $(n+1)$
\end_inset

-dimensional Ito process
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
X_{t}=\begin{bmatrix}X_{0}(t)\\
X_{1}(t)\\
\vdots\\
X_{n}(t)
\end{bmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
with 
\begin_inset Formula $0\leq t\leq T$
\end_inset

.
 We assume
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
dX_{0}(t)=\rho(t,\omega)X_{0}(t)dt
\]

\end_inset


\end_layout

\begin_layout Standard
and
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
dX_{i}(t)=\mu_{i}(t,\omega)dt+\sum_{j=1}^{m}\sigma_{i,j}(t,\omega)dB_{j}(t)
\]

\end_inset


\end_layout

\begin_layout Standard
with 
\begin_inset Formula $X_{0}(0)=1$
\end_inset

 and 
\begin_inset Formula $X_{i}(0)=x_{i}$
\end_inset

 for 
\begin_inset Formula $1\leq i\leq n$
\end_inset

.
 The market is called normalized if,
 for all 
\begin_inset Formula $0\leq t\leq T$
\end_inset

,
 
\begin_inset Formula $X_{0}(t)=1$
\end_inset

.
\end_layout

\begin_layout Subsection
Portfolio
\end_layout

\begin_layout Standard
A portfolio is a 
\begin_inset Formula $\mathcal{F}_{t}^{m}$
\end_inset

-adapted,
 
\begin_inset Formula $(n+1)$
\end_inset

-dimensional stochastic process
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{\theta}(t,\omega)=\begin{bmatrix}\theta_{0}(t,\omega)\\
\theta_{1}(t,\omega)\\
\vdots\\
\theta_{n}(t,\omega)
\end{bmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
The value of the portfolio at time 
\begin_inset Formula $t\leq T$
\end_inset

 is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V(t,\omega)=\sum_{i=0}^{n}\theta_{i}(t,\omega)X_{i}(t,\omega)
\]

\end_inset


\end_layout

\begin_layout Standard
A portfolio is called self-financing if
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\intop_{0}^{T}\left|\theta_{0,s}\rho_{s}X_{0,s}+\sum_{i=1}^{n}\theta_{i,s}\mu_{i,s}\right|ds<\infty
\]

\end_inset


\end_layout

\begin_layout Standard
and
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\intop_{0}^{T}\left(\sum_{i=1}^{n}\theta_{i,s}\sigma_{i,j,s}\right)^{2}ds<\infty
\]

\end_inset


\end_layout

\begin_layout Standard
for all 
\begin_inset Formula $j=1,2,\dots,m$
\end_inset

,
 and finally
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
dV_{t}=\sum_{i=0}^{n}\theta_{i,t}dX_{i,t}
\]

\end_inset


\end_layout

\begin_layout Standard
A portfolio 
\begin_inset Formula $\theta\left(t,\omega\right)$
\end_inset

 is called admissible if there exists 
\begin_inset Formula $K<\infty$
\end_inset

 such that 
\begin_inset Formula $V(t,\omega)>-K$
\end_inset

 for almost all 
\begin_inset Formula $(t,\omega)\in[0,T]\times\Omega$
\end_inset

.
\end_layout

