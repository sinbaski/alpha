\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{align*}
\intop_{0}^{t}\frac{T}{T-s}\cdot\frac{b}{T-s}ds & =\intop_{0}^{t}\frac{bT}{\left(T-s\right)^{2}}ds\\
 & =bT\intop_{-T}^{t-T}\frac{ds}{s^{2}}\\
 & =bT\left[-\frac{1}{s}\right]_{s=-T}^{t-T}\\
 & =bT\left(-\frac{1}{t-T}+\frac{1}{-T}\right)\\
 & =bT\left(\frac{1}{T-t}-\frac{1}{T}\right)\\
 & =bT\frac{T-T+t}{T\left(T-t\right)}\\
 & =\frac{bt}{T-t}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
