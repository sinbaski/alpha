\begin_layout Standard
Define 
\begin_inset Formula $V_{i}=\frac{m_{i}}{\varrho_{i}}$
\end_inset

.
 Consider a section of the cylinder with thickness 
\begin_inset Formula $\Delta x$
\end_inset

.
 Suppose, on this section, the volume of material 
\begin_inset Formula $i$
\end_inset

 is 
\begin_inset Formula $A_{i}\Delta x$
\end_inset

 with 
\begin_inset Formula $\frac{A_{i}}{A}=\frac{V_{i}}{V_{1}+\cdots+V_{n}}$
\end_inset

 for 
\begin_inset Formula $i=1,2,\dots,n$
\end_inset

.
 The resistance of material 
\begin_inset Formula $i$
\end_inset

 on this section is therefore 
\begin_inset Formula $\frac{1}{\rho_{i}}\frac{\Delta x}{A_{i}}$
\end_inset

.
 The resistance of the whole section 
\begin_inset Formula $\Delta R$
\end_inset

 satisfies
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\frac{1}{\Delta R} & =\sum_{i=1}^{n}\left(\frac{\Delta x}{\rho_{i}A_{i}}\right)^{-1}\\
\Delta R & =\left(\sum_{i=1}^{n}\frac{\rho_{i}A_{i}}{\Delta x}\right)^{-1}\\
 & =\left(\sum_{i=1}^{n}\frac{\rho_{i}V_{i}A}{V_{1}+\cdots+V_{n}}\right)^{-1}\Delta x\\
 & =\frac{\Delta x}{A}\left(\sum_{i=1}^{n}V_{i}\right)\left(\sum_{i=1}^{n}\rho_{i}V_{i}\right)^{-1}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
It follows
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
R=\frac{\Delta x}{A}\left(\sum_{i=1}^{n}V_{i}\right)\left(\sum_{i=1}^{n}\rho_{i}V_{i}\right)^{-1}
\]

\end_inset


\end_layout

\begin_layout Standard
So the conductivity of the whole mixture is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\rho & =\left(\sum_{i=1}^{n}V_{i}\right)^{-1}\left(\sum_{i=1}^{n}\rho_{i}V_{i}\right)\\
 & =\sum_{i=1}^{n}\rho_{i}\hat{V}_{i}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\hat{V}_{i}=\frac{V_{i}}{V_{1}+V_{2}+\cdots+V_{n}}$
\end_inset

.
\end_layout

